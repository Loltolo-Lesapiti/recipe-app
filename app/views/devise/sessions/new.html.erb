<div class="container-fluid">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-2">
    <%= f.label :email, class: "form-control"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-label" %>
  </div>

  <div class="mb-2">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-label" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mb-2">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>